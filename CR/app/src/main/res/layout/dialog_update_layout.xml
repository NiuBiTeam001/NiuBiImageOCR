<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_16dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/body_16sp" />

    <TextView
        android:id="@+id/update_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_8dp"
        android:textColor="@color/text_color2"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/distance_8dp"
        android:background="@color/line_color1" />

    <TextView
        android:id="@+id/update_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginTop="@dimen/distance_8dp" />

    <Button
        android:id="@+id/force_update"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/update_now"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/body_16sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/half_force_update_ll"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_next_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/update_next_time_tip"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/body_16sp" />

        <Button
            android:id="@+id/half_force_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_16dp"
            android:gravity="center"
            android:text="@string/update_now"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/body_16sp" />
    </LinearLayout>
</LinearLayout>